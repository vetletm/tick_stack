<% if @global_tags -%>
[global_tags]
<%   @global_tags.each do |key, value| -%>
  <%= key %> = "<%= value %>"
<%   end -%>
<% end -%>

<% if @agent -%>
[agent]
<%   @agent.each do |key, value| -%>
  <%= key %> = "<%= value %>"
<%   end -%>
<% end -%>

<% if @outputs -%>
# OUTPUTS
<% @outputs.each do |key,hash| -%>
[[<%= key %>]]
<% hash.each do |key,value| -%>
<%= key %> = <%= value %>
<%   end -%>
<%  end -%>
<% end -%>

<% if @inputs -%>
# INPUTS
<% @inputs.each do |key,hash| -%>
[[<%= key %>]]
<% hash.each do |key,value| -%>
<%= key %> = <%= value %>
<%   end -%>

<%  end -%>
<% end -%>
